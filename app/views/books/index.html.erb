<!-- custom css table -->
<section class="p-5">
  <div class="container">

    <h2 class="text-center">Below is a list of all our available books</h2>

    <table class="table text-center">
      <thead>
        <tr>
          <th scope="col">Title</div>
          <th scope="col">Author</div>
          <th scope="col">Release</div>
          <th scope="col">Book's ID</div>
          <th scope="col">Details and rent</div>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.author %></td>
          <td><%= book.release_date %></td>
          <td><%= book.book_id %></td>
          <td><button class="btn btn-primary btn"><%= link_to "Read more", book %></button></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
