<div class="signup">
  <div class="container">

    <%= form_with model: @user do |form| %>

     <div class="field"> 
      <%= form.text_field :first_name, :placeholder => 'First name' %>
     </div>

     <div class="field">
      <%= form.text_field :last_name, :placeholder => 'Last name' %>
     </div>

     <div class="field">
      <%= form.text_field :email, :placeholder => 'Email' %>
     </div>

     <div class="field">
      <%= form.text_field :password_digest, :placeholder => 'Password' %>
     </div>

     <div class="actions">
      <%= form.submit "Create", class: "btn-submit" %>
     </div>
     
    <% end %> 

  </div>
</div>
