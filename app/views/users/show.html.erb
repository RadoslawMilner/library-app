<h2><%= @user.first_name %></h2>
<h2><%= @user.last_name %></h2>
<p><%= @user.email %></p>
<p><%= @user.password_digest %></p>

<% if current_user && current_user.admin? %>

  <p><%= @user.role %></p>

<% end %>

<p><%= link_to "Edit details about Your Account", edit_user_path(@user) %></p>
<p><%= link_to "Delete Your Account from the Bibliotheca", user_path(@user), turbo_method: "delete" %></p>
